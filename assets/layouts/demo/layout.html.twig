                    <img alt="{{ '@WexampleSymfonyDesignSystemBundle.common.app::name' | trans }}" src="{{ asset('/bundles/wexamplesymfonyhelpers/wex.gif') }}">
                </a>
        </div>
    </header>
            {{ macro_tabs.start(render_pass) }}
